    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start CDS",
            "cwd": "${workspaceFolder}/",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "port": 4014
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Uploader",
            "cwd": "${workspaceFolder}/uploader/",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "port": 4015
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Approuter",
            "cwd": "${workspaceFolder}/app/",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "port": 4016
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Connect to nodemon",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
        }
    ]
}